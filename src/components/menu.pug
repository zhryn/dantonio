    ]

    function makeCommonMenu(selectedIndex) {
        let menu = commonMenu

        if (selectedIndex >= 0) {
            menu[selectedIndex].active = true
            menu[selectedIndex].href = '#'
        }

        return menu
    }

    function makeSubWorkMenu(selectedIndex, selectedSubIndex) {
        let submenu = workSubMenu 
        submenu[selectedIndex].active = true

        if (submenu[selectedIndex].subs.length > 0 && selectedSubIndex != -1) {
            submenu[selectedIndex].subs[selectedSubIndex].active = true
            submenu[selectedIndex].subs[selectedSubIndex].href = '#'
        }

        submenu.forEach((item, index) => {
            if (index != selectedIndex)
                item.subs = []
        })

        return submenu
    }

